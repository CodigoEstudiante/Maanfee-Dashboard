@page "/Users/DetailsView/{IdUser}"
@inherits _BaseView

<DetailsComponent Title="@DashboardResource.StringDetails" Model="@ApplicationUser" StringAvatar="@Avatar" />

<MudPaper Class="pa-3 my-3 ActionColor" Elevation="3" Outlined="true" Square="true">
	<MudGrid Spacing="1">
		<MudItem>
			<MudButton Link="@($"/Users/CrudateView/{@IdUser}")" Variant="Variant.Filled" Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.AddTask" IconColor="Color.Surface">@DashboardResource.StringEdit</MudButton>
		</MudItem>
		<MudItem>
			<MudButton Link="@($"/Users/DeleteView/{@IdUser}")" Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.Delete" IconColor="Color.Surface">@DashboardResource.StringDelete</MudButton>
		</MudItem>
		<MudItem>
			<MudButton Link="/Users/IndexView" Variant="Variant.Filled" Color="Color.Success" StartIcon="@Icons.Material.Filled.PlaylistAddCheck" IconColor="Color.Surface">@DashboardResource.StringList</MudButton>
		</MudItem>
	</MudGrid>
</MudPaper>
