@*@inherits SharedLayout*@

<MudRTLProvider RightToLeft="@SharedLayoutSettings.IsRTL">
	<MudDialog>
		<TitleContent>
			<MudText Typo="Typo.h6">
				<MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Warning" />
			</MudText>
		</TitleContent>
		<DialogContent>
			<MudText>
				با توجه به اینکه سمت برای کاربر تعریف نشده استفاده از برخی از قسمت های سیستم امکان پذیر نمی باشد
			</MudText>
		</DialogContent>
		<DialogActions>
			<MudButton OnClick="Cancel" Color="Color.Warning" Variant="Variant.Filled">
				@DashboardResource.StringCancel
			</MudButton>
		</DialogActions>
	</MudDialog>
</MudRTLProvider>

@code {

	[CascadingParameter]
	MudDialogInstance MudDialog { get; set; }

	void Cancel() => MudDialog.Cancel();
}
